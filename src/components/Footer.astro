---
import type { Props } from '@astrojs/starlight/props';
import { Icon } from "@astrojs/starlight/components";
---

<footer class="custom-footer">
  <div class="footer-container">
    <div class="footer-content">
      <p class="copyright">Â© Leger Labs, Inc.</p>
      
      <nav class="footer-links">
        <a href="/about">About</a>
        <a href="/careers">Careers</a>
        <a href="https://cal.com/leger" target="_blank" rel="noopener noreferrer">Schedule Call</a>
        <a href="/changelog">Changelog</a>
        <a href="/terms">Terms</a>
        <a href="/privacy">Privacy</a>
      </nav>
      
      <div class="social-links">
        <a href="https://github.com/leger-labs" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
          <Icon name="github" />
        </a>
        <a href="https://linkedin.com/company/leger-labs" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
          <Icon name="linkedin" />
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .custom-footer {
    background-color: var(--sl-color-bg);
    border-top: 1px solid var(--sl-color-gray-5);
    margin-top: auto;
  }

  .footer-container {
    padding: 1.5rem 1.5rem;
  }

  .footer-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 100rem;
    margin: 0 auto;
    width: 100%;
  }

  .copyright {
    color: var(--sl-color-gray-3);
    font-size: 0.875rem;
    margin: 0;
    flex-shrink: 0;
  }

  .footer-links {
    display: flex;
    gap: 2rem;
    flex: 1;
    justify-content: center;
  }

  .footer-links a {
    color: var(--sl-color-gray-2);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .footer-links a:hover {
    color: var(--sl-color-white);
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    flex-shrink: 0;
  }

  .social-links a {
    color: var(--sl-color-gray-3);
    transition: color 0.2s ease;
    font-size: 1.25rem;
  }

  .social-links a:hover {
    color: var(--sl-color-white);
  }

  @media (max-width: 50rem) {
    .footer-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-links {
      flex-wrap: wrap;
      gap: 1rem;
    }
  }
</style>
